# ============================================
# DATABASE (Required)
# ============================================
# PostgreSQL connection string
# Example: postgresql://user:password@localhost:5432/campustrace
# Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT-ID].supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/campustrace"

# ============================================
# AUTHENTICATION (Required)
# ============================================
# JWT secret key for session tokens (min 32 chars, use strong random value)
JWT_SECRET="replace-with-strong-random-secret-min-32-characters"

# Campus email domain for registration validation (e.g., @campus.edu)
CAMPUS_EMAIL_DOMAIN="campus.edu"

# ============================================
# IMAGE UPLOADS (Optional)
# ============================================
# Cloudinary account credentials (optionalâ€”falls back to base64 if not set)
# Sign up at https://cloudinary.com/
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# ============================================
# CAMPUS LOCATION (Required)
# ============================================
# Center latitude for campus map (e.g., New Delhi: 28.6139)
NEXT_PUBLIC_CAMPUS_CENTER_LAT="28.6139"

# Center longitude for campus map (e.g., New Delhi: 77.2090)
NEXT_PUBLIC_CAMPUS_CENTER_LNG="77.2090"

# Campus radius in meters (e.g., 1200 = 1.2km from center)
NEXT_PUBLIC_CAMPUS_RADIUS_METERS="1200"

# ============================================
# NODE ENVIRONMENT (Optional)
# ============================================
# Set to 'production' for deployments
# NODE_ENV="development"
